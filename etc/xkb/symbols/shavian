//â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”˜
// Alt+Shift+n â—ŒÌƒ  U+0303 - combining tilde

// (for better viewing in VIM run ":set ts=18")

default partial alphanumeric_keys modifier_keys
xkb_symbols "qwerty" {

    name[Group1]= "Shavian (QWERTY)";

//â”‚ Â´ â”‚ Â¹ â”‚ Â² â”‚ Â³ â”‚ â´ â”‚ âµ â”‚ â¶ â”‚ â· â”‚ â¸ â”‚ â¹ â”‚ â° â”‚ â†’ â”‚ â‰  â”‚ bksp â”‚
//â”‚ â‰ˆ â”‚ â‚ â”‚ â‚‚ â”‚ â‚ƒ â”‚ â‚„ â”‚ â‚… â”‚ â‚† â”‚ â‚‡ â”‚ â‚ˆ â”‚ â‚‰ â”‚ â‚€ â”‚ â† â”‚ Â± â”‚ bksp â”‚
    key <TLDE>	{[ grave,	asciitilde,	U00B4,	U2248	]}; // ` ~ Â´ (acute accent)  â‰ˆ (almost equal)
    key <AE01>	{[ 1,	exclam,	U00B9,	U2081	]}; // 1 ! Â¹ (superscript 1) â‚ (subscript 1)
    key <AE02>	{[ 2,	at,	U00B2,	U2082	]}; // 2 @ Â² (superscript 2) â‚‚ (subscript 2)
    key <AE03>	{[ 3,	numbersign,	U00b3,	U2083	]}; // 3 # Â³ (superscript 3) â‚ƒ (subscript 3)
    key <AE04>	{[ 4,	dollar,	U2074,	U2084	]}; // 4 $ â´ (superscript 4) â‚„ (subscript 4)
    key <AE05>	{[ 5,	percent,	U2075,	U2085	]}; // 5 % âµ (superscript 5) â‚… (subscript 5)
    key <AE06>	{[ 6,	asciicircum,	U2076,	U2086	]}; // 6 ^ â¶ (superscript 6) â‚† (subscript 6)
    key <AE07>	{[ 7,	ampersand,	U2077,	U2087	]}; // 7 & â· (superscript 7) â‚‡ (subscript 7)
    key <AE08>	{[ 8,	asterisk,	U2078,	U2088	]}; // 8 * â¸ (superscript 8) â‚ˆ (subscript 8)
    key <AE09>	{[ 9,	parenleft,	U2079,	U2089	]}; // 9 ( â¹ (superscript 9) â‚‰ (subscript 9)
    key <AE10>	{[ 0,	parenright,	U2070,	U2080	]}; // 0 ( â° (superscript 0) â‚€ (subscript 0)
    key <AE11>	{[ minus,	underscore,	U2192,	U2190	]}; // - _ â†’ (right arrow)   â† (left arrow)
    key <AE12>	{[ equal,	plus,	U2260,	U00B1	]}; // = + â‰  (notequal to)   Â± (plus minus)

//â”‚ tab â”‚ â€¦ â”‚ â—ŒÌ€ â”‚ â—ŒÌ â”‚ Â® â”‚ â„¢ â”‚ âˆš â”‚ â†‘ â”‚ â—ŒÌˆ â”‚ Ã¸ â”‚ â„— â”‚ âŸ¨ â”‚ âŸ© â”‚ â€¢  â”‚
//â”‚ tab â”‚ âŒœ â”‚ âŒ â”‚ âŒ â”‚ âŒŸ â”‚ â€° â”‚   â”‚   â”‚   â”‚ Ã˜ â”‚ Ï€ â”‚ âŸ® â”‚ âŸ¯ â”‚ â—¦  â”‚
// shift+w â—ŒÌ€ U+0300 combining grave mark
// shift+e â—ŒÌ U+0301 combining acute mark
// shift+i â—ŒÌˆ U+0308 combining diaeresis (umlaut)
    key <AD01>	{[ U10476,	U1046C,	U2026,	U231C	]}; //q: oil    Out
    key <AD02>	{[ U10462,	U1047E,	U0300,	U231D	]}; //w: woe    Ian
    key <AD03>	{[ U10467,	U10471,	U0301,	U231E	]}; //e: egg    Age
    key <AD04>	{[ U1046E,	U10478,	U00AE,	U231F	]}; //r: roar   Are
    key <AD05>	{[ U10451,	U10454,	U2122,	U2030	]}; //t: tot    Thigh
    key <AD06>	{[ U1046D,	U10477,	U221A,	VoidSymbol	]}; //y: ah     Awe
    key <AD07>	{[ U10473,	U1046B,	U2191,	VoidSymbol	]}; //u: up     Wool
    key <AD08>	{[ U10466,	U10470,	U0308,	VoidSymbol	]}; //i: if     Eat
    key <AD09>	{[ U1046A,	U10474,	U00F8,	U00D8	]}; //o: on     Oak
    key <AD10>	{[ U10450,	U10479,	U2117,	U03C0	]}; //p: peep   Or
    key <AD11>	{[ bracketleft,	braceleft,	U27E8,	U27EE	]}; //   [      {
    key <AD12>	{[ bracketright, braceright,	U27E9,	U27EF	]}; //   ]      }
    key <BKSL>	{[ backslash,	bar,	U2022,	U25E6	]}; //   \      |

//â”‚ caps  â”‚ â€œ â”‚ â€ â”‚ â†“ â”‚ Â° â”‚ Ã¦ â”‚ â€ â”‚ Å“ â”‚ â‰¤ â”‚ â‰¥ â”‚ Â§ â”‚ Ã— â”‚  ent â”‚
//â”‚ caps  â”‚   â”‚ â˜º â”‚   â”‚   â”‚ Ã† â”‚ â€‘ â”‚ Å’ â”‚   â”‚ â‚¤ â”‚   â”‚   â”‚  ent â”‚

    key <AC01>	{[ U10469,	U10468,	U201C,	VoidSymbol	]}; //a: Ado    Ash
    key <AC02>	{[ U10455,	U10456,	U201D,	U263A	]}; //s: So     Sure
    key <AC03>	{[ U1045B,	U1047C,	U2193,	VoidSymbol	]}; //d: Dead   Array
    key <AC04>	{[ U10453,	U10472,	U00B0,	VoidSymbol	]}; //f: Fee    Ice
    key <AC05>	{[ U1045C,	periodcentered,	U00E6,	U00C6	]}; //g: Gag    Â·(UB7)
    key <AC06>	{[ U10463,	U1045E,	U2010,	U2011	]}; //h: Ha-ha  They
